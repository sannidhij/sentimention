<% @tweets[:results].each do |tweet| %>
<% sentiment = Twitter.current_sentiment(tweet[:text])%>
  <%= content_tag :div, :class => "tweet #{sentiment}" do %>
  	<%= content_tag :p, "#{tweet[:from_user_name]}(@#{tweet[:from_user]}) says -" %>
  	<%= content_tag :p, tweet[:text]%>
    <%= content_tag :p, "The current sentiment is #{sentiment}"%>
    <%= content_tag :p, "Would you like to change the sentiment?" %>
    <%= radio_button("tweet", "sentiment", "positive") %> Positive
    <%= radio_button("tweet", "sentiment", "negative") %> Negative
    <%= radio_button("tweet", "sentiment", "neutral") %> Neutral
  <% end %>
<% end%>